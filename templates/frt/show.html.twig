{% extends 'base.html.twig' %}
{% block title %}{{ mix.title }} Mix{% endblock %}

{% block body %}
<div class="container">
    <h1 class="d-inline me-3">{{ mix.title }}</h1> <i class="fas fa-edit"></i>
    <div class="row mt-5">
        <div class="col-12 col-md-4">
            {{ include('frt/_recordSvg.html.twig') }}
        </div>
        <div class="col-12 col-md-8 ps-5">
            <h2 class="mb-4">10 songs (30 minutes of 60 still available)</h2>
             {% for mix in mixes%}


            <div class="col col-md-4">
                <a href="{{ path('app_show_id', {
                    id: mix.id
                }) }}" class="mixed-vinyl-container p-3 text-center">

            <div class="song-list"
             {{stimulus_controller('song-controls', {
                infoUrl: path("app_fruit_getFuit", { id: loop.index }) 
             })}}
              >
                <div class="d-flex mb-3">
                    <a href="#" {{ stimulus_action('song-controls', 'play') }} >
                        <i class="fas fa-play me-3"></i>
                    </a>
                    <span class="song-details">{{mix.title}} - {{mix.pays | upper }} </span>
                    <a href="#">
                        <i class="fas fa-bars mx-3"></i>
                    </a>
                    <a href="#">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </div>
            {% endfor %}
            <button type="button" class="btn btn-success"><i class="fas fa-plus"></i> Ajouter un fruit</button>
        </div>
    </div>
</div>
{% endblock %}
